<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
    <title>Grocery Inventory</title>
</head>

<body>
    <div class="page-container">
        <div class="nav-section">
            <%- include("nav", { categories: categories }) %>
        </div>
        <div class="main-content">
            <h1 class="page-title">Item Inventory</h1>

            <div class="accordion" id="accordionExampleTwo">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            Add New Item
                        </button>
                        <form action="/" method="POST" class="item-form">
                            <div class="input-container">
                                <label for="newItemName" class="input-label">Item Name:</label>
                                <input type="text" placeholder="item name" name="newItemName" id="newItemName"
                                    class="item-input">
                                <input type="hidden" name="action" value="add">
                            </div>
                            <div class="input-container">
                                <label for="newItemCategory" class="input-label">Item Category:</label>
                                <select name="newItemCategory" id="newItemCategory" class="item-input" required>
                                    <option value="" disabled selected>Select a category</option>
                                    <% categories.forEach(category=> { %>
                                        <option value="<%= category.id %>">
                                            <%= category.name %>
                                        </option>
                                        <% }) %>

                                </select>
                                <input type="hidden" name="action" value="add">
                            </div>
                            <div class="input-container">
                                <label for="newItemPrice" class="input-label">Price: $</label>
                                <input type="number" name="newItemPrice" id="newItemPrice" step=".01" class="item-input"
                                    required>
                            </div>

                            <button class="add-button" type="submit">Add</button>
                        </form>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse show"
                        data-bs-parent="#accordionExampleTwo">
                        <div class="accordion-body">
                            <% for (let i=0; i < items.length; i++) { %>
                                <div class="item-container">
                                    <%= items[i] %>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>